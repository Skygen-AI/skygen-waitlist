{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Skygen Waitlist",
  "version": "0.1.0",
  "identifier": "com.skygen.desktop",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "bash src-tauri/tauri-dev.sh",
    "beforeBuildCommand": "bash src-tauri/tauri-build.sh"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Skygen",
        "width": 1200,
        "height": 800,
        "resizable": false,
        "fullscreen": false,
        "center": true,
        "decorations": true,
        "transparent": false,
        "alwaysOnTop": false,
        "titleBarStyle": "Visible"
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "category": "Productivity",
    "shortDescription": "AI-powered assistant application",
    "longDescription": "Skygen is a modern AI assistant application built with Next.js and Tauri for desktop platforms.",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
